{
  "manifest_version": 3,
  "name": "ChatGPT Text Processor",
  "version": "1.0",
  "description": "Send selected text to ChatGPT and display the response",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
